                    <Button 
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Margin="30,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                    >
                        <Button.Content>
                            <TextBlock Text="ChatGPT"
                            TextWrapping="Wrap"
                            FontSize="18"
                        />
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
            
            
            <!-- messages/response -->
            <Grid Margin="0" MaxWidth="768" Visibility="{Binding messagesItemsControl.ItemsSource, Converter={StaticResource messageListVisiblityConverter}}">
                <Border>
                    <ScrollViewer x:Name="messagesScrollViewer"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Hidden">
                        <ItemsControl x:Name="messagesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="{Binding IsRequest, Converter={StaticResource messageAlignmentConverter}}"
          Margin="{Binding IsRequest, Converter={StaticResource messageMarginConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!-- group (text + actions) -->
                                        <Grid Grid.Column="1" x:Name="MessageGroup">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="32"/>
                                            </Grid.RowDefinitions>

                                            <!-- group/text -->
                                            <Border Grid.Row="0"
                    Background="{Binding IsRequest, Converter={StaticResource messageBackgroundColorConverter}}"
                    CornerRadius="18"
                    Padding="16,6"
                    VerticalAlignment="Center">
                                                <Grid>
                                                    <Border x:Name="circle"
                            Width="12" Height="12"
                            Visibility="{Binding Text, Converter={StaticResource thinkingConverter}}"
                            Background="White" CornerRadius="20000"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0">
                                                        <Border.RenderTransform>
                                                            <ScaleTransform x:Name="circleScale" ScaleX="1" ScaleY="1" />
                                                        </Border.RenderTransform>
                                                        <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                                                    </Border>

                                                    <TextBlock Text="{Binding Text}"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Foreground="White"
                               Margin="0"/>
                                                </Grid>

                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                <DoubleAnimation Storyboard.TargetName="circle"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 From="1" To="1.25" Duration="0:0:0.5"/>
                                                                <DoubleAnimation Storyboard.TargetName="circle"
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 From="1" To="1.25" Duration="0:0:0.5"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                            </Border>

                                            <!-- group/actions -->
                                            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Opacity="0"
                        x:Name="ActionPanel"
                        Margin="8,4,0,0"
                        Height="32"
                        MinWidth="0">

                                                <!-- resources: button styles -->
                                                <StackPanel.Resources>
                                                    <Style x:Key="ChatActionButtonStyle" TargetType="Button">
                                                        <Setter Property="Width" Value="28"/>
                                                        <Setter Property="Height" Value="28"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Grid x:Name="root" RenderTransformOrigin="0.5,0.5"
                                          Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                                        <Grid.RenderTransform>
                                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                        </Grid.RenderTransform>
                                                                        <Rectangle x:Name="hoverRect" Fill="#303030" RadiusX="6" RadiusY="6" Opacity="0"/>
                                                                        <Viewbox Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                            <ContentPresenter/>
                                                                        </Viewbox>
                                                                    </Grid>

                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Trigger.EnterActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="hoverRect"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="1" Duration="0:0:0.18">
                                                                                            <DoubleAnimation.EasingFunction>
                                                                                                <CubicEase EasingMode="EaseOut"/>
                                                                                            </DoubleAnimation.EasingFunction>
                                                                                        </DoubleAnimation>
           
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.EnterActions>
                                                                            <Trigger.ExitActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="hoverRect"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.18"/>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.ExitActions>
                                                                        </Trigger>
                                                                        <Trigger Property="IsPressed" Value="True">
                                                                            <Setter TargetName="hoverRect" Property="Opacity" Value="0.9"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </StackPanel.Resources>

                                                <!-- actions/copy -->
                                                <Button Style="{StaticResource ChatActionButtonStyle}"
                                                    ToolTipService.InitialShowDelay="0"
                                                    ToolTipService.BetweenShowDelay="0"
                                                    ToolTipService.ShowDuration="30000"
                                                    ToolTipService.HorizontalOffset="0"
                                                    ToolTipService.Placement="Bottom"
                                                >
                                                    <Button.ToolTip>
                                                        <ToolTip Style="{StaticResource ChatTooltipStyle}" Placement="Top">
                                                            <TextBlock Text="Копировать"/>
                                                        </ToolTip>
                                                    </Button.ToolTip>

